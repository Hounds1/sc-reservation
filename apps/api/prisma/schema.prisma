generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model accounts {
  account_id BigInt @id @default(autoincrement())
  email      String @unique @db.Text
  password   String @db.Text
  name       String @db.VarChar(30)
  display_name String @db.VarChar(30)
  role       String @db.VarChar(15)
  status     String @db.VarChar(10) @default("ACTIVE")
  created_at   BigInt
  updated_at   BigInt?
  last_login_at   BigInt?
  email_verified_at   BigInt?
}

model cafes {
  cafe_id BigInt @id @default(autoincrement())
  business_name String @unique @db.Text
  address1 String @db.Text
  address2 String @db.Text
  created_at BigInt
  updated_at BigInt?

  images cafe_images[]
  prices prices[]
}

model cafe_images {
  image_id BigInt @id @default(autoincrement())
  cafe_id BigInt
  image_src String @db.Text
  origin_name String @db.Text
  identified_name String @unique @db.Text
  extension String @db.VarChar(10)

  cafe cafes @relation(fields: [cafe_id], references: [cafe_id])
}

model prices {
  price_id BigInt @id @default(autoincrement())
  cafe_id BigInt
  amount_subtotal Decimal @db.Decimal(18, 2)
  amount_tax Decimal @db.Decimal(18, 2)
  amount_total Decimal @db.Decimal(18, 2)

  cafe cafes @relation(fields: [cafe_id], references: [cafe_id])
}
